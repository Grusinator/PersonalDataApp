<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalDataApp.Views.LoginPage"
             Title="login">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login" Clicked="Login_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Username" FontSize="Medium" />
            <Entry Text="{Binding user.Username}" FontSize="Small" />
            <Label Text="Password" FontSize="Medium" />
            <Editor Text="{Binding user.Password}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>