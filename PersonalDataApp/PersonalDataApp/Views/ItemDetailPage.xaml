<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalDataApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Dato:" FontSize="Medium" />
        <Label Text="{Binding Datapoint.Datetime}" FontSize="Small"/>
        <Label Text="Category:" FontSize="Medium" />
        <Label Text="{Binding Datapoint.Category}" FontSize="Small"/>
        <Label Text="Text from Audio:" FontSize="Medium" />
        <Label Text="{Binding Datapoint.TextFromAudio}" FontSize="Small"/>


    </StackLayout>
</ContentPage>