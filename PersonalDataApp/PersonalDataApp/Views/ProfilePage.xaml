<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PersonalDataApp.Views.ProfilePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="1">
                <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
                    <Label Text="Username" />
                    <Label Text="{Binding User.Username}"/>

                    <Label Text="Email" />
                    <Label Text="{Binding User.Email}"/>

                    <Label Text="Name" />
                    <Label Text="{Binding User.Name}"/>

                    <Label Text="Date Of Birth" />
                    <Label Text="{Binding User.Birthdate.Date}" />

                    <Label Text="Language" />
                    <Label Text="{Binding User.Language}" />

                    <Label Text="Audio Threshold" />
                    <Label Text="{Binding User.AudioThreshold}" />

                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>